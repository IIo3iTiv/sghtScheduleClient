<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    android:orientation="horizontal"
    android:weightSum="100">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:gravity="center">

        <Button
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/Grey"
            android:layout_gravity="right"
            android:layout_marginRight="3dp"/>

        <Button
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/streak"
            android:layout_gravity="top|right"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/point"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/streak_gray"
            android:layout_gravity="bottom|right"
            android:layout_marginBottom="15dp"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="85"
        android:orientation="vertical"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/txtTime"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/expTime"
            android:textSize="16sp"
            android:textColor="@color/black4"
            android:paddingStart="10dp"
            tools:ignore="RtlSymmetry" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:background="@color/background_2"
            android:layout_marginStart="10dp">

            <Button
                android:id="@+id/stick"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimaryDark"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:id="@+id/txtSubGroup"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="left"
                        android:text="@string/expSubGroup"
                        android:textColor="@color/black4"
                        android:textSize="16sp"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:id="@+id/txtNumPair"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:layout_marginRight="15dp"
                        android:text="@string/expNumPair"
                        android:textColor="@color/black4"
                        android:textSize="16sp"
                        tools:ignore="RtlHardcoded" />

                </FrameLayout>

                <TextView
                    android:id="@+id/txtDiscipline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:text="@string/expDiscipline"
                    android:textSize="18sp"
                    android:textColor="@color/black4"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/txtTeacher"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="@string/expTeacher"
                        android:textSize="16sp"
                        android:textColor="@color/black4"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:id="@+id/txtAudit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="15dp"
                        android:text="@string/expAuditorium"
                        android:textSize="16sp"
                        android:textColor="@color/black4"
                        tools:ignore="RtlHardcoded" />

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/txtTimeBreak"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="@string/expTimeBreak"
            android:textSize="16sp"
            android:textColor="@color/DimGrey"
            android:paddingStart="10dp"
            tools:ignore="RtlSymmetry"
            android:layout_marginTop="5dp"/>

    </LinearLayout>

</LinearLayout>

